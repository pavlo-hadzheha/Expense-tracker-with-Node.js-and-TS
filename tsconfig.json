{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}